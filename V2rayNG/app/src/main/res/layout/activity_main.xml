<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vpn_gradient"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="invisible"
                app:indicatorColor="@color/colorWhite" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/vpn_card_white"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="24dp">

                    <!-- Header: menu + VPN title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/navigation_drawer_open"
                            android:padding="8dp"
                            android:src="@drawable/ic_menu_24dp"
                            android:scaleType="centerInside" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/vpn_header_title"
                            android:textColor="@color/md_theme_onBackground"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <!-- Power button with ring -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp">

                        <View
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_power_button_ring" />

                        <ImageButton
                            android:id="@+id/btn_power"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_power_button"
                            android:contentDescription="@string/action_stop_service"
                            android:padding="28dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_power_button" />
                    </FrameLayout>

                    <!-- Status: dot + Connected/Disconnected -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/status_dot"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_status_dot_connected" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/vpn_disconnected"
                            android:textColor="@color/md_theme_onBackground"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Speed section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/vpn_speed"
                        android:textColor="@color/vpn_speed_label"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vpn_download"
                                android:textColor="@color/vpn_speed_label"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_download_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textColor="@color/md_theme_onBackground"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vpn_mbps"
                                android:textColor="@color/vpn_speed_label"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="@color/divider_color_light" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vpn_upload"
                                android:textColor="@color/vpn_speed_label"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_upload_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€”"
                                android:textColor="@color/md_theme_onBackground"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vpn_mbps"
                                android:textColor="@color/vpn_speed_label"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Location section: map -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/vpn_location"
                        android:textColor="@color/vpn_location_label"
                        android:textSize="13sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/iv_world_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/world_map"
                            android:contentDescription="@string/vpn_location" />

                        <View
                            android:id="@+id/location_dot"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="52%"
                            android:layout_marginTop="38%"
                            android:background="@drawable/bg_location_dot" />
                    </FrameLayout>

                    <!-- Country selector -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/country_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="14dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:id="@+id/tv_country_flag"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:text="ðŸŒ" />

                            <TextView
                                android:id="@+id/tv_country_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/vpn_select_location"
                                android:textColor="@color/md_theme_onBackground"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_down_24dp"
                                android:contentDescription="@string/vpn_choose_country" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Hidden: keep ViewPager so GroupServerFragment still loads server data -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible" />
</FrameLayout>
